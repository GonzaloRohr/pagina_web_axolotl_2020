
.container-services-info
	margin-left 40px
	margin-right 40px
	margin-top 100px
	padding-bottom 100px
	border-bottom 1px solid #c4c0c0
	h2 
		margin 50px
		font-size 2.5em
		text-align center
		font-weight bold
	p 
		font-size 1.1em

.container-services-service-text
	margin-left 40px
	margin-right 40px
	margin-top 100px
	padding-bottom 100px
	border-bottom 1px solid #c4c0c0
	h2 
		margin-bottom 50px
		font-size 2.5em
		text-align center
		font-weight bold
	ul
		li 
			font-size 1em
			list-style none
			margin-bottom 12px
			&:hover
				i 
					color #fff
					transform rotateX(180deg)					 
			i 
				margin-right 12px
				transition .4s 
.container-services-agent-title
	width 100%
	height 100%
	margin 100px
	margin-bottom 50px
	text-align center
	h2 
		font-size 2.5em
		font-weight bold

.container-services-contact-agent	
	width 100%
	height 100%
	padding 40px
	display flex 
	flex-wrap wrap
	justify-content center
	.services-profile-container
		width 400px
		height 450px
		margin 10px
		position relative
		box-sizing border-box
		overflow hidden
		border 1px solid #c4c0c0
		&:hover
			.profile-hover
				display block
		img 
			width 100%
			height 75%
		.profile-hover
			top 0 
			left 0
			width 100%
			height 100%
			background-color rgba(0, 0, 0, .2)
			position absolute
			display none
			a 
				width 100%
				height 100%
				display flex
				justify-content center 
				align-items center
				i 
					border-radius 50%
					font-size 2.5em
					padding 15px
					background-color rgba(0, 0, 0, .8)
					color #fff
			
		.container-profile-text
			width 100%
			height 25%
			padding 20px
			background-color #fff
			border-top 1px solid #c4c0c0
			p 
				font-size 1.1em
