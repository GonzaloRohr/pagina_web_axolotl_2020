
.equipo-background
	height 40vh
	width 100%
	background-image url('../imagenes/fondo2.png')
	background-size 100% 100%
	div
		h2 
			font-size 4rem 

.opacidad
	background rgba(0, 0, 0, 0.5)

.section-bar-search	
		.col-section-search
			width 100%
			display flex 
			justify-content flex-end
			.section-search
				position relative
				width 578px
				i 
					position absolute
					font-size 1.4em
					top 8px 
					left 12px
					z-index 10
					color #e6e6e6
					&:hover 
						cursor pointer
							
						
				input.form-control
					padding-left 42px
					border-radius 0
					color #e6e6e6 !important
					background-color #808080
					&::placeholder
						color #e6e6e6
					&:focus
					&:hover						
						box-shadow none
						border 1px solid #fff
						&::placeholder
							color #fff
						

	.form-group
		.area-select
			width 100%
			height calc(1.5em + .75rem + 2px)
			padding .375rem 1.75rem .375rem .75rem
			    padding-top 0.375rem
			    padding-right 1.75rem
			    padding-bottom 0.375rem
			    padding-left 0.75rem
			font-size 1rem
			font-weight 400
			line-height 1.5
			color #e6e6e6
			vertical-align middle
			border 1px solid #ced4da
			background-color rgba(0, 0, 0, .5)
			&::placeholder
				color #e6e6e6
			&:focus
			&:hover
				box-shadow none
				border 1px solid #343a40
				color #fff
				&::placeholder
					color #fff
		
		
.col-profile
	margin-top 12px
	display flex
	align-items center
	justify-content center
	.container-profile
		width 300px
		max-width 300px
		height 400px
		margin 5px
		position relative
		background-color #f8f8f8
		box-sizing border-box	
		&:hover 
			.profile-hover
				display flex
			.profile-text 
				display none	
		img 
			display block
			width 100%
			height 100%	
		.profile-hover
			top 0 
			left 0
			width 100%
			height 100%
			background-color rgba(0, 0, 0, .2)
			position absolute
			display none
			a 
				width 100%
				height 100%
				display flex
				justify-content center 
				align-items center
				i 
					border-radius 50%
					font-size 2.5em
					padding 15px
					background-color rgba(0, 0, 0, .8)
					color #fff

		.profile-text
			width 100%
			height 25%
			background-color rgba(0, 0, 0, .5)
			color #fff
			position absolute
			padding 12px
			bottom 0
			p 
				padding-bottom 3px
					

