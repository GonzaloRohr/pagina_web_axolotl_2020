


.container-texts-contact
	.row 
		padding 32px
		padding-top 150px
		padding-bottom 150px

.col-md-4
	box-sizing border-box
	.container-text-contact
		width 300px
		height 400px
		background-color #808080
		display flex
		align-items center
		justify-content center
		flex-direction column
		box-sizing border-box
		img 
			margin-top 12px
			margin-bottom 12px
			width 100px
			&:hover 
				color #fff
		.text-contact
			padding 12px
			width 100%
			height 200px
			box-sizing border-box
			h2 
				font-weight 700 !important
				color #fff
			p 
				font-size 1.2em
				color #fff
			span 
				font-size 1.2em
				color #fff
			
section 
	.row
		.col 
			.title-contact-form
				width 100%
				display flex 
				justify-content center
				align-items center
				flex-direction column
				padding-top 100px 
				padding-bottom 100px
				h2
					font-size 3em !important
				p 
					font-size 1.2em !important
					color #837474
				
.contact-container-form
	margin-bottom 100px
	box-sizing border-box
	div
		.form-control
			margin 0
			padding 30px
			border-radius 0 !important
			color #e6e6e6 !important
			background-color rgba(0, 0, 0, .5)
			border 1px solid #ced4da
			font-size 1.2em
			&::placeholder
				color #e6e6e6
			&:focus
			&:hover
				box-shadow none
				border 1px solid #343a40
				color #fff
				&::placeholder
					color #fff
					border 1px solid #fff
		.btn
			padding-top: 1rem;
			padding-bottom: 1rem;
			border-radius 0 !important
			background-color #343a40
			font-size 1.2em
			color #fff
	
@media only screen and (max-width 728px)
	.contact-container-form
		padding-right 1rem !important
		padding-left 1rem !important